<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manage read-status of articles"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:layout_marginBottom="16dp"/>

    <RadioGroup
        android:id="@+id/radioGroupReadStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radioMarkAllRead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mark all articles as already read"
            android:layout_marginBottom="8dp"/>

        <RadioButton
            android:id="@+id/radioMarkBeforeRead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mark articles before last time as already read"
            android:layout_marginBottom="8dp"/>

        <!-- Time input fields for "before last time as read" -->
        <LinearLayout
            android:id="@+id/layoutTimeInputsRead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Days"
                    android:textSize="12sp"/>
                
                <EditText
                    android:id="@+id/etDaysRead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:hint="d_"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hours"
                    android:textSize="12sp"/>
                
                <EditText
                    android:id="@+id/etHoursRead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:hint="h_"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Minutes"
                    android:textSize="12sp"/>
                
                <EditText
                    android:id="@+id/etMinutesRead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:hint="m_"/>
            </LinearLayout>
        </LinearLayout>

        <RadioButton
            android:id="@+id/radioMarkAllUnread"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mark all articles as not read yet"
            android:layout_marginBottom="8dp"/>

        <RadioButton
            android:id="@+id/radioMarkBeforeUnread"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mark articles before last time as not read yet"
            android:layout_marginBottom="8dp"/>

        <!-- Time input fields for "before last time as unread" -->
        <LinearLayout
            android:id="@+id/layoutTimeInputsUnread"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Days"
                    android:textSize="12sp"/>
                
                <EditText
                    android:id="@+id/etDaysUnread"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:hint="d_"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hours"
                    android:textSize="12sp"/>
                
                <EditText
                    android:id="@+id/etHoursUnread"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:hint="h_"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Minutes"
                    android:textSize="12sp"/>
                
                <EditText
                    android:id="@+id/etMinutesUnread"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:hint="m_"/>
            </LinearLayout>
        </LinearLayout>
    </RadioGroup>

    <Button
        android:id="@+id/btnApplyReadStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="APPLY"
        android:layout_marginTop="8dp"/>

</LinearLayout>
