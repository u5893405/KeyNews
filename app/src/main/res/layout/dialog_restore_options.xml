<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
    
        <TextView
            android:id="@+id/tvRestoreHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select data to restore"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Backup File Location"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/etRestorePath"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="text"
                android:hint="Select backup file"
                android:enabled="false" />

            <Button
                android:id="@+id/btnChooseRestoreFile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llRestoreOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select data to restore"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <CheckBox
                android:id="@+id/cbRestoreSources"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sources"
                android:checked="true" />

            <CheckBox
                android:id="@+id/cbRestoreReadingFeeds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reading Feeds"
                android:checked="true" />

            <CheckBox
                android:id="@+id/cbRestoreKeywordRules"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Keyword Rules"
                android:checked="true" />

            <CheckBox
                android:id="@+id/cbRestoreRepeatedSessions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Repeated Sessions"
                android:checked="true" />

            <CheckBox
                android:id="@+id/cbRestoreSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:checked="true" />

            <CheckBox
                android:id="@+id/cbRestoreReadMarks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="'Already Read' Marks"
                android:checked="true" />

            <CheckBox
                android:id="@+id/cbRestoreAiRules"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AI Filtering Rules"
                android:checked="true" />

            <CheckBox
                android:id="@+id/cbRestoreAiFilterCache"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AI Filtering Cache"
                android:checked="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="How to handle conflicts?"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <RadioGroup
                android:id="@+id/rgConflictResolution"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rbOverwriteExisting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Overwrite existing data"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/rbKeepExisting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Keep existing data (add new data only)" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btnCancelRestore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/btnImport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Import"
                android:layout_marginStart="8dp"
                android:enabled="false" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
