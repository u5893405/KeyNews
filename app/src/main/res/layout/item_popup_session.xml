<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">
    
    <!-- Session name and enable switch -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        
        <Switch
            android:id="@+id/switchEnabled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
            
        <TextView
            android:id="@+id/tvSessionName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            android:text="Session Name" />
    </LinearLayout>
    
    <!-- Rule description -->
    <TextView
        android:id="@+id/tvRuleInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="4dp"
        android:text="Every 30 minutes" />
    
    <!-- Start options -->
    <RadioGroup
        android:id="@+id/rgStartOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="4dp">
        
        <RadioButton
            android:id="@+id/rbStartNow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start now" />
            
        <RadioButton
            android:id="@+id/rbStartLater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start after:" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="2dp">

            <EditText
                android:id="@+id/etHours"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="h"
                android:inputType="number" />

            <EditText
                android:id="@+id/etMinutes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="m"
                android:inputType="number" />

            <EditText
                android:id="@+id/etSeconds"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="s"
                android:inputType="number" />
            </LinearLayout>
            
        <RadioButton
            android:id="@+id/rbStartTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start at specific time" />
    </RadioGroup>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDDDDD"
        android:layout_marginTop="8dp" />
</LinearLayout>
