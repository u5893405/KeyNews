<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/articles_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Control Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVisibilityToggle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:icon="@drawable/visibility_off_24"
            app:iconGravity="textStart"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            app:iconPadding="0dp"
            android:contentDescription="Toggle visibility of read articles"
            style="@style/Widget.MaterialComponents.Button.Icon" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/stopButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:icon="@drawable/ic_stop"
            app:iconGravity="textStart"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            app:iconPadding="0dp"
            style="@style/Widget.MaterialComponents.Button.Icon" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/refreshButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:icon="@drawable/ic_refresh"
            app:iconGravity="textStart"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            app:iconPadding="0dp"
            style="@style/Widget.MaterialComponents.Button.Icon" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnManualSession"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:icon="@drawable/ic_play"
            app:iconGravity="textStart"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            app:iconPadding="0dp"
            android:contentDescription="Start manual reading session"
            style="@style/Widget.MaterialComponents.Button.Icon" />
            
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnManageReadStatus"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:icon="@drawable/ic_manage_read_status"
            app:iconGravity="textStart"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            app:iconPadding="0dp"
            android:contentDescription="Manage read status of articles"
            style="@style/Widget.MaterialComponents.Button.Icon" />
    </LinearLayout>
    
    <!-- Information Bar -->
    <LinearLayout
        android:id="@+id/infoBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#E1F5FE"
        android:padding="8dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        android:focusable="true">

        <!-- First row: Session status and timer -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            
            <TextView
                android:id="@+id/tvSessionStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="All repeated sessions disabled"
                android:textStyle="bold" />
                
            <TextView
                android:id="@+id/tvNextSessionTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--:--:--" />
        </LinearLayout>
        
        <!-- Second row: Reading progress -->
        <TextView
            android:id="@+id/tvReadingProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Reading session: not active" />
    </LinearLayout>
    
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvArticles"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
            
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />
            
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabScrollTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            android:contentDescription="Scroll to top"
            app:srcCompat="@drawable/ic_arrow_up" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</LinearLayout><!-- CodeCleaner_End_7e98853a-4ed9-4369-a92a-5706f9c9558f -->
